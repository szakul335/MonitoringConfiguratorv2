@using MonitoringConfigurator.Controllers
@model IEnumerable<UsersController.UserVm>

@{
    ViewData["Title"] = "Użytkownicy";
}

<div class="container py-5">
    @* Nagłówek - Jednolity Biały *@
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="text-white mb-1">
                <i class="bi bi-people-fill me-2"></i> Użytkownicy
            </h2>
            <p class="text-muted mb-0">Zarządzaj dostępem i rolami w systemie.</p>
        </div>
        <div>
            <span class="badge bg-secondary p-2">
                <i class="bi bi-database me-1"></i> Suma: @Model.Count()
            </span>
        </div>
    </div>

    @* Powiadomienia (Toast) *@
    @if (TempData["Toast"] != null)
    {
        <div class="alert alert-success border-0 mb-4 d-flex align-items-center">
            <i class="bi bi-check-circle-fill me-2"></i>
            <div>@TempData["Toast"]</div>
        </div>
    }

    @* Pasek wyszukiwania *@
    <div class="card bg-dark border-secondary mb-4">
        <div class="card-body py-2">
            <form method="get" class="row g-2 align-items-center">
                <div class="col-auto text-white">
                    <i class="bi bi-search"></i> Szukaj:
                </div>
                <div class="col-auto flex-grow-1">
                    <input type="text" name="search" value="@ViewBag.Search" class="form-control form-control-sm bg-secondary text-white border-0" placeholder="Email lub ID...">
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-sm btn-outline-light">
                        <i class="bi bi-funnel"></i> Filtruj
                    </button>
                </div>
            </form>
        </div>
    </div>

    @* Tabela *@
    @if (!Model.Any())
    {
        <div class="alert alert-dark border-secondary text-secondary">
            Brak użytkowników spełniających kryteria.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle">
                <thead>
                    <tr>
                        <th class="ps-3">Użytkownik</th>
                        <th>Rola</th>
                        <th class="text-end pe-4">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        var initial = !string.IsNullOrEmpty(u.Email) ? u.Email.Substring(0, 1).ToUpper() : "U";

                        <tr>
                            <td class="ps-3">
                                <div class="d-flex align-items-center">
                                    <div class="me-3 d-flex align-items-center justify-content-center rounded-circle text-white fw-bold bg-secondary bg-opacity-25"
                                         style="width: 40px; height: 40px;">
                                        @if (u.IsAdmin)
                                        {
                                            <i class="bi bi-shield-lock-fill text-danger"></i>
                                        }
                                        else if (u.IsOperator)
                                        {
                                            <i class="bi bi-headset text-info"></i>
                                        }
                                        else
                                        {
                                            @initial
                                        }
                                    </div>
                                    <div>
                                        <div class="fw-bold text-white">@u.Email</div>
                                        <small class="text-muted font-monospace">ID: @u.Id</small>
                                    </div>
                                </div>
                            </td>

                            <td>
                                @if (u.IsAdmin)
                                {
                                    <span class="badge bg-danger text-white border border-danger bg-opacity-25">Admin</span>
                                }
                                else if (u.IsOperator)
                                {
                                    <span class="badge bg-warning text-warning border border-warning bg-opacity-10">Operator</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary text-secondary border border-secondary bg-opacity-10">Użytkownik</span>
                                }
                            </td>

                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">

                                    @if (!u.IsAdmin)
                                    {
                                        <form method="post" action="@Url.Action("MakeAdmin","Users")" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@u.Id" />
                                            <button class="btn btn-sm btn-outline-secondary" type="submit" title="Nadaj Admina">
                                                <i class="bi bi-shield-plus"></i> Admin
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form method="post" action="@Url.Action("RemoveAdmin","Users")" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@u.Id" />
                                            <button class="btn btn-sm btn-outline-warning" type="submit" title="Zabierz Admina">
                                                <i class="bi bi-shield-minus"></i> Zabierz
                                            </button>
                                        </form>
                                    }

                                    @if (!u.IsOperator)
                                    {
                                        <form method="post" action="@Url.Action("MakeOperator","Users")" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@u.Id" />
                                            <button class="btn btn-sm btn-outline-secondary" type="submit" title="Nadaj Operatora">
                                                <i class="bi bi-person-gear"></i> Operator
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form method="post" action="@Url.Action("RemoveOperator","Users")" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@u.Id" />
                                            <button class="btn btn-sm btn-outline-warning" type="submit" title="Zabierz Operatora">
                                                <i class="bi bi-person-dash"></i> Zabierz
                                            </button>
                                        </form>
                                    }

                                    <form method="post" action="@Url.Action("Delete","Users")" class="d-inline" onsubmit="return confirm('Usunąć użytkownika trwale?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@u.Id" />
                                        <button class="btn btn-sm btn-outline-danger" type="submit" title="Usuń konto">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>