@model IEnumerable<MonitoringConfigurator.Controllers.UsersController.UserVm>
@{
    ViewData["Title"] = "Użytkownicy";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var search = ViewBag.Search as string;
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h2 class="h3 mb-1 text-white">Użytkownicy</h2>
        <p class="text-muted mb-0">Zarządzaj dostępem i rolami w systemie.</p>
    </div>
</div>

<div class="card card-dark mb-4 shadow-sm">
    <div class="card-body">
        <form method="get" class="row g-2 align-items-center">
            <div class="col-md-10">
                <input type="text" name="search" value="@search" class="form-control form-control-dark" placeholder="Szukaj po emailu lub loginie..." />
            </div>
            <div class="col-md-2 d-grid">
                <button class="btn btn-primary">
                    <i class="bi bi-search"></i> Szukaj
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card card-dark shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-dark-custom align-middle mb-0">
                <thead>
                    <tr>
                        <th class="ps-4 py-3">Email / Login</th>
                        <th class="py-3">Rola</th>
                        <th class="text-end pe-4 py-3">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-white">@u.Email</div>
                                <small class="text-muted">ID: @u.Id</small>
                            </td>
                            <td>
                                @if (u.IsAdmin)
                                {
                                    <span class="badge bg-danger text-white border border-danger bg-opacity-25">Admin</span>
                                }
                                else if (u.IsOperator)
                                {
                                    <span class="badge bg-warning text-warning border border-warning bg-opacity-10">Operator</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary text-secondary border border-secondary bg-opacity-10">Użytkownik</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    @if (!u.IsAdmin)
                                    {
                                        <form method="post" action="@Url.Action("MakeAdmin","Users")" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@u.Id" />
                                            <button class="btn btn-sm btn-outline-secondary" type="submit" title="Nadaj Admina">
                                                <i class="bi bi-shield-plus"></i> Admin
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form method="post" action="@Url.Action("RemoveAdmin","Users")" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@u.Id" />
                                            <button class="btn btn-sm btn-outline-warning" type="submit" title="Zabierz Admina">
                                                <i class="bi bi-shield-minus"></i> Zabierz
                                            </button>
                                        </form>
                                    }

                                    @if (!u.IsOperator)
                                    {
                                        <form method="post" action="@Url.Action("MakeOperator","Users")" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@u.Id" />
                                            <button class="btn btn-sm btn-outline-secondary" type="submit" title="Nadaj Operatora">
                                                <i class="bi bi-person-gear"></i> Operator
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form method="post" action="@Url.Action("RemoveOperator","Users")" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@u.Id" />
                                            <button class="btn btn-sm btn-outline-warning" type="submit" title="Zabierz Operatora">
                                                <i class="bi bi-person-dash"></i> Zabierz
                                            </button>
                                        </form>
                                    }

                                    <form method="post" action="@Url.Action("Delete","Users")" class="d-inline" onsubmit="return confirm('Usunąć użytkownika trwale?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@u.Id" />
                                        <button class="btn btn-sm btn-outline-danger" type="submit" title="Usuń konto">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>