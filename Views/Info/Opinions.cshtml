@model MonitoringConfigurator.Models.OpinionViewModel
@{
    ViewData["Title"] = "Opinie";
}

<style>
    body {
        background-color: #111;
        color: #eaeaea;
    }

    .opinions-hero {
        background: linear-gradient(135deg, rgba(21, 21, 24, 0.95) 0%, rgba(21, 21, 24, 0.8) 100%);
        border-bottom: 1px solid #2b2b2b;
        padding: 4rem 0;
        margin-bottom: 3rem;
        position: relative;
        overflow: hidden;
    }

    .stat-box {
        background: #1a1a1e;
        border: 1px solid #2b2b2b;
        border-radius: 12px;
        padding: 2rem;
        text-align: center;
        transition: transform 0.3s ease;
        height: 100%;
    }

        .stat-box:hover {
            transform: translateY(-5px);
            border-color: #ff3b30;
        }

    .stat-val {
        font-size: 3.5rem;
        font-weight: 800;
        color: #fff;
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    .stat-desc {
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.85rem;
        color: #a1a1aa;
    }

    .progress {
        background-color: #27272a;
        height: 6px;
        border-radius: 4px;
    }

    .progress-bar {
        background-color: #ff3b30;
    }

    .opinion-card {
        background: #1a1a1e;
        border: 1px solid #2b2b2b;
        border-radius: 12px;
        padding: 1.5rem;
        transition: all 0.3s ease;
        position: relative;
    }

        .opinion-card:hover {
            background: #202025;
            border-color: #ff3b30;
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

    .avatar-box {
        width: 48px;
        height: 48px;
        background: #27272a;
        color: #ff3b30;
        border: 1px solid #3f3f46;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1.2rem;
        object-fit: cover;
    }

    .form-card {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid #2b2b2b;
        border-radius: 12px;
    }

    .rating-select {
        display: inline-flex;
        flex-direction: row-reverse;
        gap: 0.5rem;
    }

        .rating-select input {
            display: none;
        }

        .rating-select label {
            font-size: 1.8rem;
            color: #3f3f46;
            cursor: pointer;
            transition: color 0.2s;
        }

            .rating-select label:hover,
            .rating-select label:hover ~ label,
            .rating-select input:checked ~ label {
                color: #fbbf24;
            }
</style>

<div class="container-fluid p-0">
    <div class="opinions-hero">
        <div class="container text-center">
            @* Nagłówek jednolity biały *@
            <h1 class="display-4 fw-bold text-white mb-2">Opinie Klientów</h1>
            <p class="lead text-secondary mx-auto" style="max-width: 600px;">
                Zobacz, co mówią o nas użytkownicy i dlaczego warto nam zaufać.
            </p>
        </div>
    </div>
</div>

<div class="container pb-5">

    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success bg-success bg-opacity-10 border-success text-white d-flex align-items-center mb-5">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Msg"]
        </div>
    }

    <div class="row g-4 mb-5">
        <div class="col-lg-4">
            <div class="stat-box d-flex flex-column justify-content-center">
                <div class="stat-val">@Model.AverageRating.ToString("0.0")</div>
                <div class="text-warning fs-4 mb-3">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <i class="bi @(i <= Math.Round(Model.AverageRating) ? "bi-star-fill" : "bi-star")"></i>
                    }
                </div>
                <div class="stat-desc">Średnia ocena (@Model.TotalCount opinii)</div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="stat-box">
                <div class="d-flex flex-column justify-content-center h-100 px-lg-4">
                    @for (int i = 5; i >= 1; i--)
                    {
                        var count = Model.StarCounts[i];
                        var percent = Model.TotalCount > 0 ? (double)count / Model.TotalCount * 100 : 0;
                        <div class="d-flex align-items-center mb-3">
                            <div class="text-secondary fw-bold small me-3" style="width: 20px;">@i</div>
                            <div class="progress flex-grow-1">
                                <div class="progress-bar" style="width: @percent.ToString("0")%"></div>
                            </div>
                            <div class="text-secondary small ms-3" style="width: 30px; text-align: right;">@count</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row g-5">
        <div class="col-lg-4 order-lg-last">
            <div class="form-card p-4 sticky-top" style="top: 2rem;">
                <h4 class="text-white fw-bold mb-4">
                    <i class="bi bi-pencil-square text-danger me-2"></i> Dodaj opinię
                </h4>

                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <form asp-action="Opinions" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-4 text-center">
                            <div class="rating-select">
                                <input type="radio" id="star5" name="Rating" value="5" checked />
                                <label for="star5"><i class="bi bi-star-fill"></i></label>
                                <input type="radio" id="star4" name="Rating" value="4" />
                                <label for="star4"><i class="bi bi-star-fill"></i></label>
                                <input type="radio" id="star3" name="Rating" value="3" />
                                <label for="star3"><i class="bi bi-star-fill"></i></label>
                                <input type="radio" id="star2" name="Rating" value="2" />
                                <label for="star2"><i class="bi bi-star-fill"></i></label>
                                <input type="radio" id="star1" name="Rating" value="1" />
                                <label for="star1"><i class="bi bi-star-fill"></i></label>
                            </div>
                            <div class="text-muted small mt-2">Wybierz ocenę</div>
                        </div>

                        <div class="mb-3">
                            <textarea asp-for="Message" class="form-control bg-dark border-secondary text-white" rows="4" placeholder="Napisz kilka słów..."></textarea>
                            <span asp-validation-for="Message" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-danger w-100 py-2 fw-bold">Opublikuj</button>
                    </form>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-lock fs-1 mb-2 d-block opacity-50"></i>
                        <p>Zaloguj się, aby dodać recenzję.</p>
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light btn-sm rounded-pill px-4">Logowanie</a>
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="text-white mb-0">Ostatnie wpisy</h3>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle border-secondary text-light" type="button" data-bs-toggle="dropdown">
                        Sortuj
                    </button>
                    <ul class="dropdown-menu dropdown-menu-dark border-secondary shadow-lg">
                        <li><a class="dropdown-item @(Model.CurrentSort == "newest" ? "active":"")" asp-route-sort="newest">Najnowsze</a></li>
                        <li><a class="dropdown-item @(Model.CurrentSort == "highest" ? "active":"")" asp-route-sort="highest">Najwyższa ocena</a></li>
                        <li><a class="dropdown-item @(Model.CurrentSort == "lowest" ? "active":"")" asp-route-sort="lowest">Najniższa ocena</a></li>
                    </ul>
                </div>
            </div>

            <div class="d-flex flex-column gap-3">
                @if (Model.Reviews.Any())
                {
                    @foreach (var op in Model.Reviews)
                    {
                        <div class="opinion-card">
                            <div class="d-flex justify-content-between mb-3">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(op.AvatarUrl))
                                    {
                                        <img src="@op.AvatarUrl" class="avatar-box p-0 me-3" />
                                    }
                                    else
                                    {
                                        <div class="avatar-box me-3">@op.Initials</div>
                                    }
                                    <div>
                                        <div class="fw-bold text-white">@op.UserName</div>
                                        <div class="small text-muted">@op.CreatedAt.ToLocalTime().ToString("d MMMM yyyy")</div>
                                    </div>
                                </div>
                                <div class="text-warning">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="bi @(i <= op.Stars ? "bi-star-fill" : "bi-star")"></i>
                                    }
                                </div>
                            </div>
                            <p class="text-light opacity-75 mb-0" style="white-space: pre-wrap;">@op.Message</p>

                            @if (User.IsInRole("Admin"))
                            {
                                <div class="mt-3 pt-2 border-top border-secondary border-opacity-25 text-end">
                                    <form asp-controller="Info" asp-action="DeleteOpinion" asp-route-id="@op.Id" method="post">
                                        @Html.AntiForgeryToken()
                                        <button class="btn btn-link btn-sm text-danger text-decoration-none p-0 opacity-75 hover-opacity-100" onclick="return confirm('Usunąć?');">
                                            <i class="bi bi-trash"></i> Usuń
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5 opacity-50">
                        <i class="bi bi-chat-left-quote display-1 mb-3 d-block text-secondary"></i>
                        <p class="text-muted">Brak opinii.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}