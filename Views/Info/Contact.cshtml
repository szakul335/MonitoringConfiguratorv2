@{
    ViewData["Title"] = "Kontakt";
}
<style>
  .contact-card{background:#151518;border:1px solid #2b2b2b;border-radius:.5rem;}
  .contact-card h5{margin-bottom:.5rem}
  .contact-list li{margin-bottom:.4rem}
  .contact-list a{color:#ff3b30;text-decoration:none}
  .contact-list a:hover{text-decoration:underline}
  .map-wrap{border:1px solid #2b2b2b;border-radius:.5rem;overflow:hidden;background:#0f0f10}
  .muted{color:#9ca3af}
</style>

<div class="container py-4">
  <h1 class="mb-2">Kontakt</h1>
  <p class="text-muted">Skontaktuj się z nami w sprawach technicznych i handlowych. Odpowiadamy w dni robocze 9:00–17:00.</p>

  <div class="row g-3 mb-3">
    <div class="col-12 col-lg-6">
      <div class="contact-card p-3 h-100">
        <h5>Dane kontaktowe</h5>
        <ul class="list-unstyled contact-list mb-0">
          <li><strong>E‑mail:</strong> <a href="mailto:kontakt@przyklad.pl">kontakt@przyklad.pl</a></li>
          <li><strong>Telefon:</strong> <a href="tel:+48123456789">+48 123 456 789</a></li>
          <li><strong>Godziny:</strong> pon–pt 9:00–17:00</li>
        </ul>
      </div>
    </div>
    <div class="col-12 col-lg-6">
      <div class="contact-card p-3 h-100">
        <h5>Dane firmy</h5>
        <ul class="list-unstyled contact-list mb-0">
          <li><strong>Adres:</strong> Gorzechowo 1, 09‑414 Gorzechowo</li>
          <li><strong>NIP:</strong> 734‑197‑45‑21</li>
          <li class="muted">Wejście od strony parkingu, biuro na I piętrze.</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="row g-3">
    <div class="col-12 col-lg-7">
      <div class="map-wrap">
        <!-- Google Maps embed for the provided address -->
        <iframe
          src="https://www.google.com/maps?q=Gorzechowo%201,%2009-414%20Gorzechowo&output=embed"
          width="100%" height="360" style="border:0" allowfullscreen="" loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>
    <div class="col-12 col-lg-5">
      <div class="contact-card p-3 h-100">
        <h5>Napisz wiadomość</h5>
        <p class="muted">Najwygodniej przez zakładkę <a asp-controller="Info" asp-action="Support">Wsparcie</a>. Możesz też skorzystać z poniższego formularza.</p>
        <form action="mailto:kontakt@przyklad.pl" method="post" enctype="text/plain">
          <div class="mb-2">
            <label class="form-label">Imię i nazwisko</label>
            <input class="form-control" name="name" required>
          </div>
          <div class="mb-2">
            <label class="form-label">E‑mail</label>
            <input class="form-control" type="email" name="email" required>
          </div>
          <div class="mb-2">
            <label class="form-label">Temat</label>
            <input class="form-control" name="subject" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Wiadomość</label>
            <textarea class="form-control" name="message" rows="4" required></textarea>
          </div>
          <button type="submit" class="btn btn-danger">Wyślij</button>
          <p class="muted mt-2 mb-0" style="font-size:.9rem">Wysyłając wiadomość akceptujesz przetwarzanie danych w celu kontaktu zwrotnego.</p>
        </form>
      </div>
    </div>
  </div>
</div>
