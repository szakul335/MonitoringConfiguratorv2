@model MonitoringConfigurator.Models.SupportViewModel
@{
    ViewData["Title"] = "Wsparcie";
}

<div class="container py-4">
    <h1 class="mb-3">Centrum Wsparcia</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="card mb-5 shadow-sm">
        <div class="card-header bg-primary text-white">
            <strong>Utwórz nowe zgłoszenie</strong>
        </div>
        <div class="card-body">

            <form asp-action="Support" method="post">
                @Html.AntiForgeryToken()
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Dział</label>

                        <select asp-for="Recipient" class="form-select">
                            <option value="Admin">Administrator</option>
                            <option value="Operator">Operator</option>
                        </select>

                    </div>
                    <div class="col-md-8">
                        <label class="form-label">Temat</label>
                        <input asp-for="Subject" class="form-control" placeholder="Czego dotyczy problem?" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label class="form-label">Treść wiadomości</label>

                        <textarea asp-for="Message" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="col-12 text-end">

                        <button type="submit" class="btn btn-primary">Wyślij zgłoszenie</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Twoje zgłoszenia</h3>
    </div>


    <div class="list-group">
        @if (Model.Sent != null && Model.Sent.Any())
        {
            foreach (var thread in Model.Sent)
            {
                var replyCount = thread.Replies?.Count ?? 0;
                // Pobieramy datę ostatniej aktywności (data odpowiedzi lub utworzenia wątku)
                var lastActivity = thread.Replies?.OrderByDescending(r => r.CreatedAt).FirstOrDefault()?.CreatedAt ?? thread.CreatedAt;

                <a asp-action="TicketDetails" asp-route-id="@thread.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center bg-dark text-white border-secondary" aria-current="true">
                    <div>
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@thread.Subject.Replace("[Admin] ", "").Replace("[Operator] ", "")</h5>
                        </div>
                        <p class="mb-1 text-white-50 small">
                            Ostatnia aktywność: @lastActivity.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                        </p>
                        <small class="text-white-50">
                            @(thread.Message.Length > 60 ? thread.Message.Substring(0, 60) + "..." : thread.Message)
                        </small>
                    </div>
                    <div class="text-end" style="min-width: 140px;">
                        @switch (thread.Status)
                        {
                            case MonitoringConfigurator.Models.ContactStatus.New:
                                <span class="badge bg-primary">Wysłano</span>
                                break;
                            case MonitoringConfigurator.Models.ContactStatus.Read:
                                <span class="badge bg-info text-dark">W trakcie</span>
                                break;
                            case MonitoringConfigurator.Models.ContactStatus.Replied:
                                <span class="badge bg-success">Otrzymano odpowiedź</span>
                                break;
                            case MonitoringConfigurator.Models.ContactStatus.Closed:
                                <span class="badge bg-secondary">Zamknięte</span>
                                break;
                        }
                        <div class="mt-1">
                            <span class="badge bg-secondary text-white border-0">Wiadomości: @(replyCount + 1)</span>
                        </div>
                    </div>
                </a>
            }
        }
        else
        {
            <div class="alert bg-dark text-white text-center border-secondary">Brak historii zgłoszeń.</div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}