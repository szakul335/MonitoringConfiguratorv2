@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Konfigurator systemów monitoringu";
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="bg-light">
    @await Html.PartialAsync("_TopNav")

    @if (TempData["Toast"] is string toastMessage)
    {
        <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1080;">
            <div class="toast show align-items-center text-bg-primary border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        @toastMessage
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }


    <main class="container mb-5 flex-grow-1">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <footer class="site-footer mt-auto pt-5 pb-4">
        <div class="container">
            <div class="row g-4">
                <div class="col-12 col-lg-4">
                    <div class="brand-block d-flex align-items-center mb-2">
                        <div class="brand-dot me-2"></div>
                        <h5 class="mb-0 text-white">Konfigurator CCTV</h5>
                    </div>
                    <p class="small text-muted mb-3">Prosty sposób na dobranie kamer, rejestratorów i akcesoriów – od projektu po wycenę.</p>
                    <ul class="list-unstyled small mb-3">
                        <li>Gorzechowo 1, 09-414 Gorzechowo</li>
                        <li>NIP: 734-197-45-21</li>
                    </ul>
                    <ul class="list-unstyled small mb-3">
                        <li>E-mail: <a href="mailto:kontakt@przyklad.pl">kontakt@przyklad.pl</a></li>
                        <li>Telefon: <a href="tel:+48123456789">+48 123 456 789</a></li>
                        <li>Godziny: pon–pt 9:00–17:00</li>
                    </ul>

                    <h6 class="mt-3 text-white">Znajdź nas</h6>
                    <div class="socials d-flex gap-2">
                        <a class="social-btn" aria-label="Facebook" href="https://www.facebook.com/" target="_blank" rel="noopener noreferrer">
                            <svg aria-hidden="true" width="28" height="28" viewBox="0 0 24 24"><path fill="currentColor" d="M22 12a10 10 0 1 0-11.6 9.9v-7h-2.4V12h2.4V9.8c0-2.4 1.4-3.7 3.6-3.7 1 0 2 .2 2 .2v2.2h-1.1c-1.1 0-1.5.7-1.5 1.4V12h2.6l-.4 2.9h-2.2v7A10 10 0 0 0 22 12z" /></svg>
                        </a>
                        <a class="social-btn" aria-label="YouTube" href="https://www.youtube.com/" target="_blank" rel="noopener noreferrer">
                            <svg aria-hidden="true" width="28" height="28" viewBox="0 0 24 24"><path fill="currentColor" d="M23 12s0-3.4-.4-5.1c-.2-.9-.9-1.6-1.8-1.8C18.9 4.6 12 4.6 12 4.6s-6.9 0-8.8.5c-.9.2-1.6.9-1.8 1.8C1 8.6 1 12 1 12s0 3.4.4 5.1c.2.9.9 1.6 1.8 1.8 1.9.5 8.8.5 8.8.5s6.9 0 8.8-.5c.9-.2 1.6-.9 1.8-1.8.4-1.7.4-5.1.4-5.1zM9.8 15.3V8.7L15.5 12l-5.7 3.3z" /></svg>
                        </a>
                        <a class="social-btn" aria-label="Instagram" href="https://www.instagram.com/" target="_blank" rel="noopener noreferrer">
                            <svg aria-hidden="true" width="28" height="28" viewBox="0 0 24 24">
                                <path fill="currentColor" d="M7 2h10a5 5 0 0 1 5 5v10a5 5 0 0 1-5 5H7a5 5 0 0 1-5-5V7a5 5 0 0 1 5-5zm0 2a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V7a3 3 0 0 0-3-3H7zm5 3.5A5.5 5.5 0 1 1 6.5 13 5.5 5.5 0 0 1 12 7.5zm0 2A3.5 3.5 0 1 0 15.5 13 3.5 3.5 0 0 0 12 9.5zm5.75-3.25a1.25 1.25 0 1 1-1.25 1.25 1.25 1.25 0 0 1 1.25-1.25z" />
                            </svg>
                        </a>
                    </div>
                </div>

                <div class="col-6 col-lg-2">
                    <h6 class="text-white">Nawigacja</h6>
                    <ul class="list-unstyled small footer-links">
                        <li><a href="/">Strona główna</a></li>
                        <li><a href="/Info/Guides">Poradniki</a></li>
                        <li><a href="/Info/Faq">FAQ</a></li>
                        <li><a href="/Info/Support">Wsparcie</a></li>
                        <li><a href="/Info/Contact">Kontakt</a></li>
                    </ul>
                </div>

                <div class="col-6 col-lg-2">
                    <h6 class="text-white">Oferta</h6>
                    <ul class="list-unstyled small footer-links">
                        <li><a href="/Products">Produkty</a></li>
                        <li><a href="/Messages">Wiadomości</a></li>
                        <li><a href="/Info/About">O projekcie</a></li>
                    </ul>
                </div>
            </div>

            <hr class="border-secondary my-4" />

            <div class="d-flex flex-column flex-md-row align-items-center justify-content-between small gap-2">
                <div>© @DateTime.Now.Year Konfigurator CCTV • Wszelkie prawa zastrzeżone</div>
                <ul class="list-inline mb-0 footer-links">
                    <li class="list-inline-item"><a href="/Info/Privacy">Polityka prywatności</a></li>
                    <li class="list-inline-item"><a href="/Info/About">O projekcie</a></li>
                    <li class="list-inline-item"><a href="/Info/Contact">Kontakt</a></li>
                    <li class="list-inline-item"><a href="/Info/Faq">FAQ</a></li>
                </ul>
            </div>
        </div>
    </footer>
</body>
</html>