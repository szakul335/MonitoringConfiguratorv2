@model IEnumerable<MonitoringConfigurator.Models.UserDocument>
@{
    ViewData["Title"] = "Moje dokumenty";
}

<div class="container py-5">

    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="display-5 fw-bold text-white mb-1">Moje dokumenty</h1>
            <p class="text-muted mb-0">Historia Twoich konfiguracji i wygenerowanych ofert.</p>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm d-flex align-items-center bg-success bg-opacity-25 text-white mb-4">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Message"]
        </div>
    }

    <div class="card border-secondary shadow-sm" style="background-color: #151518; border-color: #2b2b2b;">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle mb-0" style="background-color: transparent;">
                    <thead>
                        <tr style="border-bottom: 1px solid #2b2b2b;">
                            <th class="ps-4 py-3 text-secondary text-uppercase small fw-bold">Nazwa projektu</th>
                            <th class="py-3 text-secondary text-uppercase small fw-bold">Data</th>
                            <th class="text-end pe-4 py-3 text-secondary text-uppercase small fw-bold">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr style="border-bottom: 1px solid #27272a;">
                                    <td class="ps-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-danger bg-opacity-10 d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                <i class="bi bi-file-earmark-pdf-fill text-danger fs-5"></i>
                                            </div>
                                            <div>
                                                <span class="text-white fw-semibold d-block">@item.Title</span>
                                                <small class="text-muted">Rozmiar: @(item.Content.Length / 1024) KB</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-muted">
                                        @item.CreatedUtc.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group">
                                            <a asp-action="Download" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Pobierz PDF">
                                                <i class="bi bi-download"></i>
                                            </a>

                                            @if (!string.IsNullOrEmpty(item.InputJson))
                                            {
                                                <a asp-controller="Configurator" asp-action="Load" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Edytuj projekt">
                                                    <i class="bi bi-pencil-square"></i> Edytuj
                                                </a>
                                            }

                                            <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Czy na pewno usunąć ten dokument?');">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Usuń">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center py-5">
                                    <div class="mb-3 opacity-25">
                                        <i class="bi bi-folder2-open text-secondary" style="font-size: 3rem;"></i>
                                    </div>
                                    <h5 class="text-muted fw-normal">Brak zapisanych projektów</h5>
                                    <a asp-controller="Configurator" asp-action="Index" class="btn btn-danger btn-sm rounded-pill px-4 mt-2">
                                        <i class="bi bi-plus-lg me-2"></i> Nowy projekt
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>