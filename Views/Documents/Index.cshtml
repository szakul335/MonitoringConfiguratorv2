@model IEnumerable<MonitoringConfigurator.Controllers.DocumentsController.DocItem>
@{
    ViewData["Title"] = "Moje dokumenty";
}

<div class="container py-5">

    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="display-5 fw-bold text-white mb-1">Moje dokumenty</h1>
            <p class="text-muted mb-0">Archiwum wygenerowanych ofert i specyfikacji technicznych.</p>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger border-0 shadow-sm d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.Error
        </div>
    }
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success border-0 shadow-sm d-flex align-items-center bg-success bg-opacity-25 text-white">
            <i class="bi bi-check-circle-fill me-2"></i> @ViewBag.Message
        </div>
    }

    <div class="card border-secondary shadow-sm" style="background-color: #151518; border-color: #2b2b2b;">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle mb-0" style="background-color: transparent;">
                    <thead>
                        <tr style="border-bottom: 1px solid #2b2b2b;">
                            <th class="ps-4 py-3 text-secondary text-uppercase small fw-bold" style="width: 60%;">Nazwa dokumentu</th>
                            <th class="text-end py-3 text-secondary text-uppercase small fw-bold">Rozmiar</th>
                            <th class="text-end pe-4 py-3 text-secondary text-uppercase small fw-bold">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var f in Model)
                            {
                                <tr style="border-bottom: 1px solid #27272a;">
                                    <td class="ps-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-danger bg-opacity-10 d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                <i class="bi bi-file-earmark-pdf-fill text-danger fs-5"></i>
                                            </div>
                                            <div>
                                                <a href="@f.Url" target="_blank" class="text-white text-decoration-none fw-semibold stretched-link hover-underline">
                                                    @f.Name
                                                </a>
                                                <div class="small text-muted">PDF Dokument</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-end text-muted font-monospace small">
                                        @String.Format("{0:N0} KB", f.SizeBytes / 1024)
                                    </td>
                                    <td class="text-end pe-4" style="position: relative; z-index: 2;">
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="name" value="@f.Name" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Czy na pewno usunąć plik @f.Name?');" title="Usuń plik">
                                                <i class="bi bi-trash"></i> <span class="d-none d-md-inline ms-1">Usuń</span>
                                            </button>
                                        </form>

                                        <a href="@f.Url" target="_blank" class="btn btn-sm btn-outline-secondary ms-1" title="Pobierz">
                                            <i class="bi bi-download"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center py-5">
                                    <div class="mb-3 opacity-25">
                                        <i class="bi bi-folder2-open text-secondary" style="font-size: 3rem;"></i>
                                    </div>
                                    <h5 class="text-muted fw-normal">Brak zapisanych dokumentów</h5>
                                    <p class="text-secondary small mb-3">Skonfiguruj system, aby wygenerować pierwszą ofertę.</p>
                                    <a asp-controller="Configurator" asp-action="Index" class="btn btn-danger btn-sm rounded-pill px-4">
                                        <i class="bi bi-gear-wide-connected me-2"></i> Przejdź do Konfiguratora
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="text-end mt-2">
        <small class="text-muted fst-italic">Ścieżka zapisu: /wwwroot/documents/&lt;użytkownik&gt;</small>
    </div>
</div>