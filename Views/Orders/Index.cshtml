@model IEnumerable<MonitoringConfigurator.Models.Order>
@using MonitoringConfigurator.Models

@{
    ViewData["Title"] = "Lista Zamówień";

    // Bezpieczne rzutowanie słownika emaili przekazanego z kontrolera
    var userEmails = ViewBag.UserEmails as Dictionary<string, string>;
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white">Lista Zamówień i Zapytań</h2>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info bg-dark text-info border-info">
            <i class="bi bi-info-circle me-2"></i> Nie znaleziono żadnych zamówień.
        </div>
    }
    else
    {
        <div class="card bg-dark border-secondary shadow">
            <div class="card-body p-0">
                <div class="table-responsive">
                    @* Tabela ciemna (table-dark) *@
                    <table class="table table-dark table-hover mb-0 align-middle">
                        <thead>
                            <tr class="text-secondary">
                                <th class="ps-4">Data złożenia</th>
                                <th>Klient / Użytkownik</th>
                                <th class="text-center">Status</th>
                                <th class="text-end">Kwota</th>
                                <th class="text-center pe-4">Akcje</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 text-white">
                                        @item.OrderDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                                    </td>

                                    <td>
                                        @if (userEmails != null && item.UserId != null && userEmails.ContainsKey(item.UserId))
                                        {
                                            <span class="fw-bold text-info">@userEmails[item.UserId]</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">@(item.UserId ?? "Nieznany")</span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        @switch (item.Status)
                                        {
                                            case OrderStatus.Nowe:
                                                <span class="badge bg-primary">Nowe</span>
                                                break;

                                            case OrderStatus.WTrakcie:
                                                <span class="badge bg-warning text-dark">Weryfikacja</span>
                                                break;

                                            case OrderStatus.Zatwierdzone:
                                                <span class="badge bg-info text-dark">Zatwierdzone</span>
                                                break;

                                            case OrderStatus.Zrealizowane:
                                                <span class="badge bg-success">Zrealizowane</span>
                                                break;

                                            case OrderStatus.Anulowane:
                                                <span class="badge bg-danger">Anulowane</span>
                                                break;

                                            default:
                                                <span class="badge bg-secondary">@item.Status</span>
                                                break;
                                        }
                                    </td>

                                    <td class="text-end fw-bold text-white">
                                        @item.TotalAmount.ToString("c")
                                    </td>

                                    <td class="text-center pe-4">
                                        <div class="btn-group shadow-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Zobacz szczegóły">
                                                <i class="bi bi-eye"></i> Szczegóły
                                            </a>

                                           
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>