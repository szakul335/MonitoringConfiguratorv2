@model IEnumerable<MonitoringConfigurator.Models.Order>
@{
    ViewData["Title"] = "Moje zamówienia";
}

<div class="container py-5">
    <h2 class="text-white mb-4">Moje zamówienia</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-dark border-secondary text-secondary">
            Nie złożyłeś jeszcze żadnego zamówienia. <a asp-controller="Configurator" asp-action="Index" class="alert-link">Przejdź do konfiguratora</a>.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle">
                <thead>
                    <tr>
                        <th>Numer</th>
                        <th>Data</th>
                        <th>Ilość pozycji</th>
                        <th>Kwota</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>#@order.Id</td>
                            <td>@order.OrderDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@order.Items.Count</td>
                            <td class="fw-bold text-danger">@order.TotalAmount.ToString("N2") zł</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-light">Szczegóły</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>