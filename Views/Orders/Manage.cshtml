@using Microsoft.AspNetCore.Identity
@model MonitoringConfigurator.Models.Order

@{
    ViewData["Title"] = $"Edycja Zamówienia #{Model.Id}";

    var owner = ViewBag.OwnerUser as IdentityUser;
    var claims = ViewBag.OwnerClaims as Dictionary<string, string>;
    string GetClaim(string key) => (claims != null && claims.ContainsKey(key)) ? claims[key] : "-";
}

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-warning"><i class="bi bi-pencil-square"></i> Edycja Zamówienia #@Model.Id</h2>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light">
            <i class="bi bi-arrow-left"></i> Zakończ edycję (Wróć)
        </a>
    </div>

    @* --- INFO O KLIENCIE --- *@
    @if (owner != null)
    {
        <div class="alert alert-dark border-secondary d-flex align-items-center mb-4 text-white">
            <i class="bi bi-info-circle-fill fs-4 me-3 text-info"></i>
            <div>
                <strong>Klient:</strong> @GetClaim("profile:fullName") (@GetClaim("profile:company"))
                <span class="mx-2 text-muted">|</span>
                Email: @owner.Email
            </div>
        </div>
    }

    <div class="mb-3 text-end">
        <a asp-action="AddLineItem" asp-route-id="@Model.Id" class="btn btn-success fw-bold">
            <i class="bi bi-plus-circle-fill"></i> Dodaj nowy produkt do listy
        </a>
    </div>

    <div class="card bg-dark border-secondary shadow">
        <div class="card-body p-0">
            <div class="table-responsive">
                @* Tabela ciemna z białą czcionką *@
                <table class="table table-dark table-hover mb-0 align-middle">
                    <thead>
                        <tr>
                            <th class="ps-4">Produkt</th>
                            <th class="text-center">Cena jedn.</th>
                            <th class="text-center" style="width: 120px;">Ilość</th>
                            <th class="text-end">Wartość</th>
                            <th class="text-center" style="width: 220px;">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td class="ps-4">
                                    @if (item.Product != null)
                                    {
                                        @if (!string.IsNullOrEmpty(item.Product.ImageUrl))
                                        {
                                            <img src="@item.Product.ImageUrl" style="height: 40px; width: auto; margin-right: 10px; background: white; padding: 2px; border-radius: 4px;" />
                                        }
                                        <span class="fw-bold text-white">@item.Product.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger fw-bold">Produkt usunięty z bazy</span>
                                    }
                                </td>
                                <td class="text-center">@item.UnitPrice.ToString("N2") zł</td>
                                <td class="text-center fw-bold fs-5 text-warning">@item.Quantity</td>
                                <td class="text-end">@((item.UnitPrice * item.Quantity).ToString("N2")) zł</td>
                                <td class="text-center">
                                    <div class="btn-group shadow-sm">
                                        <a asp-action="EditLineItem" asp-route-id="@item.Id" class="btn btn-sm btn-primary fw-bold">
                                            Edytuj
                                        </a>
                                        <form asp-action="DeleteLineItem" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Czy na pewno chcesz usunąć tę pozycję z zamówienia?');">
                                            <button type="submit" class="btn btn-sm btn-danger ms-1">Usuń</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="fs-5 border-top border-secondary">
                            <td colspan="3" class="text-end fw-bold pt-3">Aktualna suma:</td>
                            <td class="text-end fw-bold text-info pt-3">@Model.TotalAmount.ToString("N2") zł</td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>