@page
@model MonitoringConfigurator.Areas.Identity.Pages.Account.Manage.ChangePasswordModel
@{
    ViewData["Title"] = "Moje konto";
    ViewData["ActivePage"] = MonitoringConfigurator.Areas.Identity.Pages.Account.Manage.ManageNavPages.ChangePassword;
    Layout = "/Views/Shared/_Layout.cshtml";
}
<style>
  body{background:#0f0f10;color:#e5e7eb}
  .card{background:#151518;border:1px solid #2b2b2b;border-radius:.6rem}
  .form-control{background:#121214;border-color:#2a2a2a;color:#e5e7eb}
  .btn-danger{background:#ff3b30;border-color:#ff3b30}
  .nav .nav-link.active{background:#1f1f22;border-radius:.5rem}
</style>

<div class="container py-4">
  <h1 class="mb-1">Moje konto</h1>
  <div class="row g-3">
    <div class="col-md-3">
      <partial name="_ManageNav"/>
    </div>
    <div class="col-md-9">
      <div class="card p-3">
        <h5 class="mb-3">Hasło</h5>
        <partial name="_StatusMessage" for="StatusMessage" />
        <form method="post">
            <div class="mb-2">
                <label asp-for="Input.OldPassword" class="form-label">Obecne hasło</label>
                <input asp-for="Input.OldPassword" class="form-control" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Input.NewPassword" class="form-label">Nowe hasło</label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label">Potwierdź hasło</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-danger">Zmień hasło</button>
        </form>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
