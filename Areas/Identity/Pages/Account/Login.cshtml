@page
@model MonitoringConfigurator.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Zaloguj się";
}

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-3">Zaloguj się</h2>

      <form method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
          <label asp-for="Input.Email" class="form-label">E-mail</label>
          <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="wpisz e-mail" />
          <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="Input.Password" class="form-label">Hasło</label>
          <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="wpisz hasło" />
          <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
          <input asp-for="Input.RememberMe" class="form-check-input" />
          <label asp-for="Input.RememberMe" class="form-check-label">Zapamiętaj mnie</label>
        </div>

        <button type="submit" class="btn btn-primary">Zaloguj</button>
        <a class="btn btn-link" asp-page="./Register">Nie masz konta? Zarejestruj się</a>
      </form>
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
