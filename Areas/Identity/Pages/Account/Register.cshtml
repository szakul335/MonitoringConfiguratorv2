@page
@model MonitoringConfigurator.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-3">Rejestracja</h2>

      <form method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
          <label asp-for="Input.Email" class="form-label">E-mail</label>
          <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="wpisz e-mail" />
          <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="Input.Password" class="form-label">Hasło</label>
          <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="min. 6 znaków" />
          <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
          <label asp-for="Input.ConfirmPassword" class="form-label">Potwierdź hasło</label>
          <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="powtórz hasło" />
          <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Zarejestruj się</button>
        <a class="btn btn-link" asp-page="./Login">Masz już konto? Zaloguj się</a>
      </form>
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
